{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2015"],
        "declaration": true,
        "noImplicitAny": false,
        "rootDirs": ["src", "node_modules"],
        "typeRoots": ["node_modules/@types"],
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "build"
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}
